<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Black}">

    <Grid RowDefinitions="Auto,Auto,*">
        <HorizontalStackLayout Grid.Row="0" Padding="10" HorizontalOptions="Start">
            <Button x:Name="Bt_voltar_mainpage" Text="Voltar"
                    TextColor="{StaticResource AzulMarinhoEscuro}"
                    BackgroundColor="{StaticResource Gray300}"
                    BorderColor="{StaticResource White}"
                    Clicked="Bt_voltar_mainpage_Clicked"/>
        </HorizontalStackLayout>

        <Label Grid.Row="1" Text="Sobre" FontFamily="Bitter" FontSize="48" TextColor="{StaticResource OffWhite}" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20,0,20"/>

        <VerticalStackLayout Grid.Row="2" VerticalOptions="Start" Padding="20" Spacing="20">
            <Frame Padding="15" BackgroundColor="{StaticResource CinzaChumbo2}" CornerRadius="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="No The Azure, elevamos a arte da hospitalidade a um novo patamar. Nossos serviços exclusivos são meticulosamente pensados para proporcionar bem-estar e conforto inigualáveis em cada instante da sua estadia. Mergulhe em um ambiente de sofisticação minimalista, onde a atenção aos detalhes e o profissionalismo impecável se unem para criar uma experiência verdadeiramente memorável."
       FontFamily="Bitter"
       FontSize="Medium"
       HorizontalOptions="Center"
       HorizontalTextAlignment="Center"
       TextColor="{StaticResource yellow}" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" BackgroundColor="{StaticResource CinzaChumbo2}" CornerRadius="10">
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="Desenvolvido por" FontFamily="Bitter" FontSize="Medium" HorizontalOptions="Center" TextColor="{StaticResource OffWhite}" />
                    <Label Text="Bruno de Morais Araújo" FontFamily="Bitter" FontSize="Medium" HorizontalOptions="Center" TextColor="{StaticResource OffWhite}" />
                    <Label Text="2025" FontFamily="Bitter" FontSize="Medium" HorizontalOptions="Center" TextColor="{StaticResource OffWhite}" />
                    <Label Text="Git: https://github.com/dimorais1" FontFamily="Bitter" FontSize="Medium" HorizontalOptions="Center" TextColor="{StaticResource OffWhite}" />
                    
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>